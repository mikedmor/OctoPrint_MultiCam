<!-- ko allowBindings: true -->
<form id="settings_plugin_multicam_form" class="form-horizontal">
    <h3>{{ _('Multicam Profiles') }}</h3>
    <div class="alert alert-warning" role="alert" data-bind="visible: isClassicWebcamEnabled">
        ClassicWebcam is enabled. Consider disabling it to hide its webcam interface.
    </div>
    <div class="row-fluid">
        <div class="span3 text-center"><h4>{{ _('Name') }}</h4></div>
        <div class="span4 text-center"><h4>{{ _('URL') }}</h4></div>
        <!--<div class="span5"><h4>{{ _('Snapshot') }}</h4></div>-->
        <div class="span1 text-center"><h4><i class="fa fa-arrows-alt fa-2x" title="{{ _('Stream aspect ratio') }}"></i></h4></div>
        <div class="span1 text-center"><h4><i class="fa fa-arrows-h fa-2x" title="{{ _('Flip webcam horizontally') }}"></i></h4></div>
        <div class="span1 text-center"><h4><i class="fa fa-arrows-v fa-2x" title="{{ _('Flip webcam vertically') }}"></i></h4></div>
        <div class="span1 text-center"><h4><i class="fa fa-rotate-right fa-2x" title="{{ _('Rotate webcam 90 degrees counter clockwise') }}"></i></h4></div>
    </div>
    <div data-bind="foreach: multicam_profiles">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span1">
                    <input style="padding: 4px; margin: 0px;" type="radio" class="span12 text-right" data-bind="checked: $root.selectedPreviewProfileIndex, checkedValue: $index" >
            </div>

            <div class="span2" style="margin-left">
                <input type="text" class="span12 text-right" data-bind="value: name, 
                                                                        event: {change: function(){$root.reloadChangesMade(true);}}">
            </div>
            <div class="input-append span2">
                <input type="text" class="span12 text-right" data-bind="value: URL, attr: { 'title': 'URL of stream' },
                                                                        event: {change: function(){$root.updatePreviewSettings($index);}}">
            </div>

            <div class="input-append span2">
                <input type="text" class="span12 text-right" data-bind="value: snapshot, attr: { 'title': 'URL of snapshot' }">
            </div>

            <div class="span1" >
                <select style="width: 120%" data-bind="options: $parent.available_ratios, value: streamRatio, attr: { 'title': 'Stream ratio' },
                                                       event: {change: function(){$root.updatePreviewSettings($index);}}"></select>
            </div>
            <div class="span1">
                <input style="padding: 4px; margin: 0px;" type="checkbox" class="span12 text-right" data-bind="checked: flipH, attr: { 'title': 'Flip Horizontally' },
                                                                                                               event: {change: function(){$root.updatePreviewSettings($index);}}">
            </div>
            <div class="span1">
                <input style="padding: 4px; margin: 0px;" type="checkbox" class="span12 text-right" data-bind="checked: flipV, attr: { 'title': 'Flip Vertically' },
                                                                                                               event: {change: function(){$root.updatePreviewSettings($index);}}">
            </div>
            <div class="span1">
                <input style="padding: 4px; margin: 0px;" type="checkbox" class="span12 text-right" data-bind="checked: rotate90, attr: { 'title': 'Rotate 90' },
                                                                                        event: {change: function(){$root.updatePreviewSettings($index);}}">
            </div>
            <div class="span1" >
                <button title="Remove Webcam" class="btn btn-danger" data-bind="click: $parent.removeMultiCamProfile, enable: $index()!==0, attr: { 'title': $index()!==0 ? 'Remove Webcam' : 'Default Webcam cannot be removed!' }"><i class="fa fa-trash-o"></i></button>
            </div>
        </div>


    </div>
    <div class="row-fluid">
        <div class="offset10 span2">
            <button title="Add Webcam" class="btn btn-primary" data-bind="click: addMultiCamProfile"><i class="fa fa-plus"></i></button>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div>Streaming from: <b><span data-bind="text:previewWebCamSettings.streamUrl"></span></b></div>
            <div id="multicam_preview_container">
                <div id="webcam_img_container" tabindex="0">
                    <div id="webcam_rotator" data-bind="css: { webcam_rotated: previewWebCamSettings.webcam_rotate90(), webcam_unrotated: !previewWebCamSettings.webcam_rotate90() }">
                        <div class="webcam_fixed_ratio" data-bind="css: previewWebCamSettings.webcamRatioClass">
                            <div class="webcam_fixed_ratio_inner">
                                <img id="webcam_image_preview" data-bind="css: { flipH: previewWebCamSettings.webcam_flipH(), flipV: previewWebCamSettings.webcam_flipV() }">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /ko -->
